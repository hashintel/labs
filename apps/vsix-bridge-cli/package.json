{
  "name": "vsix-bridge-cli",
  "version": "0.1.0",
  "description": "Sync VS Code extensions to fork IDEs (Cursor, Antigravity, Windsurf)",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "vsix-bridge": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "tsx src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "release": "release-it",
    "prepack": "RELEASE=true npm run build",
    "prepublishOnly": "npm run test",
    "release:ci": "release-it --ci",
    "release:dry": "release-it --dry-run --no-github.release"
  },
  "keywords": [
    "vscode",
    "vsix",
    "cursor",
    "windsurf",
    "extensions"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/hashintel/labs",
    "directory": "apps/vsix-bridge-cli"
  },
  "author": {
    "name": "Lu Nelson"
  },
  "license": "(MIT OR Apache-2.0)",
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@tsconfig/node18": "^18.2.4",
    "@tsconfig/strictest": "^2.0.8",
    "@types/node": "^22.0.0",
    "@types/semver": "^7.7.1",
    "@types/update-notifier": "^6.0.8",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.0",
    "release-it": "^19.2.4",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.53.1",
    "vitest": "^4.0.0"
  },
  "dependencies": {
    "@clack/prompts": "^1.0.1",
    "semver": "^7.7.4",
    "update-notifier": "^7.3.1"
  }
}
