{
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.mjs",
    "eslint.config.js",
    "prettier.config.js",
    "vite.config.js",
    ".ladle/**/*.mjs"
  ],
  "exclude": [".output", "build", "node_modules"],

  "compilerOptions": {
    "target": "ES2022",
    "jsx": "react-jsx",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["vite/client"],

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": false,
    "noEmit": true,

    /* Linting */
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* Other */
    "ignoreDeprecations": "6.0" // avoids warning about baseUrl usage
  }
}
